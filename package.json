{
  "name": "webmcp-debugger-chrome-extension",
  "version": "1.0.0",
  "private": true,
  "description": "Chrome DevTools extension for window.ai and WebMCP introspection",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm build:pages --watch\" \"pnpm build:bridge --watch\" \"pnpm build:interceptor --watch\" \"pnpm build:background --watch\"",
    "build": "pnpm build:pages && pnpm build:interceptor && pnpm build:bridge && pnpm build:background && pnpm copy:manifest",
    "build:pages": "vite build --config vite.config.ts",
    "build:bridge": "vite build --config vite.config.content.ts",
    "build:interceptor": "vite build --config vite.config.interceptor.ts",
    "build:background": "vite build --config vite.config.background.ts",
    "copy:manifest": "cp manifest.json dist/manifest.json && cp icon-128.png dist/icon-128.png",
    "typecheck": "tsc --noEmit",
    "lint": "eslint panel/src/ content/ background/",
    "test": "vitest run",
    "package": "cd dist && zip -r webmcp-debugger-chrome-extension.zip ."
  },
  "devDependencies": {
    "@tech-sumit/ai-inspector-types": "^0.2.0",
    "@types/chrome": "^0.0.315",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "postcss": "^8.5.0",
    "prettier": "^3.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  }
}
